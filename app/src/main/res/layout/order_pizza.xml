<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PizzaMeniu"
    android:background="@drawable/check_out_background1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="@font/amiri_bold_italic"
        android:text="Check" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiri_bold_italic"

        android:gravity="center"
        android:text="Check"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnGetPizzas"

        android:text="Get pizzas"
        android:textColor="#FFFFFF"
        android:textSize="20sp"


        android:layout_width="149dp"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:fontFamily="@font/amiri_bold_italic"
        android:shadowColor="#86A800"
        android:layout_gravity="center"
        android:gravity="center"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <ListView
        android:id="@+id/listViewCheck"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:layout_marginTop="70dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.example2.PizzaDescription"
    android:background="@drawable/picu_meniu_background3">

    <TextView
        android:id="@+id/textViewDName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiri_bold_italic"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="176dp" />

    <ImageView
        android:id="@+id/imageViewD"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewDDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="176dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="145dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDKaina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="176dp" />

        <TextView
            android:id="@+id/textViewEuro2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="€"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Add to cart"
            android:textColor="#ffffff"
            android:background="@drawable/pizza_desc_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewEuro"
            android:layout_height="wrap_content"
            android:layout_width="42dp"
            android:text="€"
            android:textColor="#ffffff"
            android:textSize="20dp" />



        <Button
            android:id="@+id/btnFinishOrder"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Finish Order"
            android:textColor="#ffffff"
            android:background="@drawable/pizza_desc_btn"/>

    </LinearLayout>



</LinearLayout>